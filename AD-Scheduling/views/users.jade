extends layout

block content
  h1= title

    br
    br
    h2 User List
        #userList
            table
                thead
                    th First Name
                    th Last Name
                    th Email
                    th Phone Number
                    th School
                    th Delete?
                tbody


    h2 Add User
        #addUser
            fieldset
                input#inputFirst(type='text', placeholder='First Name')
                input#inputLast(type='text', placeholder='Last Name')
                br
                input#inputEmail(type='text', placeholder='Email')
                input#inputPhone(type='text', placeholder='Phone')
                br
                input#inputSchool(type='text', placeholder='School')
                button#btnAddUser Add User

    script(src='/javascripts/users.js')